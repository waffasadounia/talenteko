# .editorconfig — TalentÉkô
# Fichier de référence, encodé en UTF-8

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.php]
indent_size = 4

[*.{twig,html}]
indent_size = 2

[*.{yml,yaml,json,md,css,scss}]
indent_size = 2
