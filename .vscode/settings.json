{
  // Désactive les faux warnings du validateur CSS intégré
  "css.validate": false,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  // Associe UNIQUEMENT tes CSS du dossier assets/styles à PostCSS
  "files.associations": {
    "**/assets/styles/*.css": "postcss"
  },

  // Configuration des fichiers
  "files.encoding": "utf8",           // UTF-8 sans BOM
  "files.autoGuessEncoding": false,   // Pas de détection auto (évite les bascules foireuses)
  "files.eol": "\n",                  // Forcer LF pour tout le projet

  // Tailwind
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["class:\\s*\"([^\"]*)\"", 1],
    ["class(Name)?=\\\"([^\\\"]*)\\\"", 2]
  ],
  "editor.quickSuggestions": { "strings": true },

  // Nettoyage automatique
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Affichage des caractères invisibles (espaces, tabs, insécables)
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,

  // Formatters auto
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[twig]": {
    "editor.defaultFormatter": "mblode.twig-language-2",
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Désactive les faux warnings d'Intelephense
  "intelephense.diagnostics.undefinedTypes": false
}
