APP_ENV=dev
APP_DEBUG=1
APP_SECRET=ChangeMeForLocalDev

# Connexion DB locale (adapter user/password selon ton environnement)
# ⚠️ On met "user:password" en placeholder → jamais root sans mot de passe ici
DATABASE_URL="mysql://user:password@127.0.0.1:3306/talenteko?serverVersion=mariadb-10.4.32&charset=utf8mb4"

# Mailer local (exemple avec Mailhog, Mailtrap ou Mailpit)
# Exemple Mailhog : smtp://127.0.0.1:1025
# Exemple Mailtrap : smtp://user:password@smtp.mailtrap.io:2525
MAILER_DSN="smtp://user:password@127.0.0.1:1025"

# Messenger (transport Doctrine par défaut en local)
MESSENGER_TRANSPORT_DSN=doctrine://default
