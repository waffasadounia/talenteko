{# ============================================================
   templates/exchange/new_message.html.twig
   Notification : Nouveau message reçu — TalentÉkô
   ============================================================ #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>
			Nouveau message sur TalentÉkô
		</title>
		<style>
			/* ----------- Styles de base ----------- */
			body {
				font-family: Montserrat, Arial, sans-serif;
				background-color: #fdf5f1;
				color: #141c2e;
				margin: 0;
				padding: 24px;
				line-height: 1.6;
			}
			.container {
				max-width: 600px;
				margin: 0 auto;
				background: #ffffff;
				border-radius: 12px;
				padding: 24px;
				box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
			}

			h1 {
				color: #d6713c;
				font-size: 20px;
				font-weight: 700;
				text-align: center;
				margin-bottom: 24px;
			}
			p {
				font-size: 14px;
				margin: 10px 0;
			}
			blockquote {
				border-left: 4px solid #d6713c;
				padding-left: 12px;
				color: #434958;
				font-style: italic;
				margin: 16px 0;
				background-color: #fef9f7;
				border-radius: 6px;
			}
			.btn {
				display: inline-block;
				background-color: #d6713c;
				color: #ffffff !important;
				padding: 12px 18px;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 600;
				margin: 20px 0;
				text-align: center;
			}
			.footer {
				font-size: 12px;
				color: #777777;
				text-align: center;
				margin-top: 24px;
			}
		</style>
	</head>
	<body>
		<div class="container" role="article" aria-roledescription="e-mail">
			<h1>Nouveau message reçu sur TalentÉkô</h1>
			<p>
				<strong>{{ sender|default('Un utilisateur TalentÉkô') }}</strong>
				vous a envoyé un message&nbsp;:
			</p>
			<blockquote>
				{{ content|default('Message vide')|e }}
			</blockquote>
			<p style="text-align: center;">
				<a href="{{ url('app_messages') }}" class="btn" aria-label="Ouvrir la conversation complète sur TalentÉkô">
					Lire la conversation complète
				</a>
			</p>
			<p style="font-size: 13px; color: #555;">
				Pour répondre, connectez-vous à votre espace TalentÉkô et consultez vos messages.
			</p>
			<hr style="border: none; border-top: 1px solid #eee; margin: 24px 0;"/>
			<div class="footer">
				©
				{{ 'now'|date('Y') }}
				TalentÉkô<br/>
				Plateforme d’échange de compétences entre particuliers.
			</div>
		</div>
	</body>
</html>
