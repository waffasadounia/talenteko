{#================================
  templates/category/index.html.twig
  Page "Toutes les catégories"
  ================================#}

{% extends 'base.html.twig' %}

{% block title %}
  Toutes les catégories | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-white py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h1 class="text-talenteko-blue mb-10 text-center text-3xl font-bold">
        Toutes les catégories
      </h1>

      <div
        class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4"
      >
        {% for category in categories %}
          {% include 'partials/_category_card.html.twig' with {
            category: category
          } %}
        {% else %}
          <p class="col-span-full text-center text-gray-500 italic">
            Aucune catégorie disponible pour l'instant.
          </p>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
