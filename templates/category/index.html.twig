{# ============================================================
   templates/category/index.html.twig
   Page : Toutes les catégories — TalentÉkô
   ============================================================ #}

{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories | TalentÉkô{% endblock %}

{% block body %}
<section class="bg-orange-50 py-16" role="region" aria-labelledby="categories-title">
  <div class="mx-auto max-w-6xl px-4">
    <h1 id="categories-title" class="mb-10 text-center text-3xl font-bold text-talenteko-blue-900">
      Toutes les catégories
    </h1>
    <div class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4" role="list">
      {% for category in categories %}
        {% include 'partials/_category_card.html.twig' with { category: category } %}
      {% else %}
        <p role="status" class="col-span-full text-center italic text-gray-500">
          Aucune catégorie disponible pour l'instant.
        </p>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
