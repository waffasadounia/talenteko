{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} | TalentÉkô{% endblock %}

{% block body %}
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-talenteko-blue mb-8 text-center">
      {{ category.name }}
    </h1>

    {% if listings is not empty %}
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for annonce in listings %}
          {% include 'partials/_annonce_card.html.twig' with { annonce: annonce } %}
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-500 text-center">
        Aucune annonce disponible pour cette catégorie.
      </p>
    {% endif %}
  </section>
{% endblock %}
