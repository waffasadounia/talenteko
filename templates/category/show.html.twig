{#================================
  templates/category/show.html.twig
  Page détaillée d'une catégorie
  ================================#}

{% extends 'base.html.twig' %}

{% block title %}
  {{ category.name }}
  | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-white py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h1 class="text-talenteko-blue-900 mb-10 text-center text-3xl font-bold">
        {{ category.name }}
      </h1>

      {# Grille des listings liés à cette catégorie #}
      <div
        class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        {% for listing in category.listings %}
          {% include 'partials/_listing_card.html.twig' with {
            listing: listing
          } %}
        {% else %}
          <p class="col-span-full text-center text-gray-500 italic">
            Aucun listing pour cette catégorie pour l'instant.
          </p>
        {% endfor %}
      </div>

      <div class="mt-8 text-center">
        <a href="{{ path('app_category_index') }}" class="btn-link">
          <i class="fa fa-arrow-left"></i>
          <span>Retour aux catégories</span>
        </a>
      </div>
    </div>
  </section>
{% endblock %}
