{# ============================================================
   templates/profile/_profile_nav.html.twig
   Barre de navigation du profil — TalentÉkô
   ============================================================ #}

<nav aria-label="Navigation Profil" class="mx-auto max-w-7xl mb-10 pt-2 sm:pt-2">
    <ul class="flex flex-wrap gap-2 sm:gap-4 px-4 pt-4 text-sm font-semibold">

        {% set current = app.request.attributes.get('_route') %}

        {# --- Tableau de bord / Profil --- #}
        <li>
            <a href="{{ path('app_profile_dashboard') }}"
               class="flex items-center gap-2 px-4 py-2 rounded-lg transition
               {{ current starts with 'app_profile_dashboard'
                   ? 'bg-talenteko-orange-500 text-white shadow'
                   : 'bg-white text-talenteko-blue-900 border border-gray-200 hover:bg-gray-50' }}">
                <i class="fa-solid fa-user"></i>
                Profil
            </a>
        </li>

        {# --- Mes annonces --- #}
        <li>
            <a href="{{ path('app_profile_listings') }}"
               class="flex items-center gap-2 px-4 py-2 rounded-lg transition
               {{ current starts with 'app_profile_listings'
                   ? 'bg-talenteko-orange-500 text-white shadow'
                   : 'bg-white text-talenteko-blue-900 border border-gray-200 hover:bg-gray-50' }}">
                <i class="fa-solid fa-bullhorn"></i>
                Mes annonces
            </a>
        </li>

        {# --- Mes échanges --- #}
        <li>
            <a href="{{ path('app_profile_exchanges') }}"
               class="flex items-center gap-2 px-4 py-2 rounded-lg transition
               {{ current starts with 'app_profile_exchanges'
                   ? 'bg-talenteko-orange-500 text-white shadow'
                   : 'bg-white text-talenteko-blue-900 border border-gray-200 hover:bg-gray-50' }}">
                <i class="fa-solid fa-handshake"></i>
                Mes échanges
            </a>
        </li>

        {# --- Messages --- #}
        <li>
            <a href="{{ path('app_messages') }}"
               class="flex items-center gap-2 px-4 py-2 rounded-lg transition
               {{ current starts with 'app_messages'
                   ? 'bg-talenteko-orange-500 text-white shadow'
                   : 'bg-white text-talenteko-blue-900 border border-gray-200 hover:bg-gray-50' }}">
                <i class="fa-solid fa-comments"></i>
                Messages
            </a>
        </li>

        {# --- Modifier profil --- #}
        <li>
            <a href="{{ path('app_profile_edit') }}"
               class="flex items-center gap-2 px-4 py-2 rounded-lg transition
               {{ current starts with 'app_profile_edit'
                   ? 'bg-talenteko-orange-500 text-white shadow'
                   : 'bg-white text-talenteko-blue-900 border border-gray-200 hover:bg-gray-50' }}">
                <i class="fa-solid fa-pen"></i>
                Modifier
            </a>
        </li>

    </ul>
</nav>
