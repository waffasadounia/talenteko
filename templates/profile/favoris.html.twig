{# ================================
  templates/profile/favoris.html.twig
  Page "Mes favoris"
  ================================ #}

{% extends 'base.html.twig' %}

{% block title %}
	Mes favoris | TalentÉkô
{% endblock %}
{% block body %}
	{% include 'profile/_profile_nav.html.twig' %}
	<section class="mx-auto max-w-6xl px-4 py-10">
		<h1 class="mb-6 flex items-center gap-2 text-3xl font-bold text-talenteko-blue-900">
			<i class="fa-solid fa-heart text-talenteko-orange-500"></i>
			Mes favoris
		</h1>

		{# Grille des annonces favorites #}
		{% if favorites is not empty %}
			<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{% for favorite in favorites %}
					{% if favorite.listing is defined and favorite.listing is not null %}
						{% include 'partials/_listing_card.html.twig' with {
              listing: favorite.listing
            } %}
					{% endif %}
				{% endfor %}
			</div>
		{% else %}
			<p class="italic text-gray-600">
				Vous n’avez encore ajouté aucune annonce à vos favoris.
			</p>
		{% endif %}
		<div class="mt-8">
			<a href="{{ path('app_profile_dashboard') }}" class="btn-outline">
				<i class="fa-solid fa-arrow-left mr-1"></i>
				Retour au tableau de bord
			</a>
		</div>
	</section>
{% endblock %}
