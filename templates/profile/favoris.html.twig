{#================================
  templates/profile/favoris.html.twig
  Page "Mes favoris"
  ================================#}
{% extends 'base.html.twig' %}

{% block title %}
  Mes favoris | TalentÉkô
{% endblock %}

{% block body %}
  <section class="mx-auto max-w-6xl px-4 py-10">
    <h1 class="text-talenteko-blue mb-6 text-3xl font-bold">
      <i class="fa-solid fa-heart text-talenteko-orange-500"></i>
      Mes favoris
    </h1>

    {% if favoris is not empty %}
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {% for listing in favoris %}
          {% include 'partials/_listing_card.html.twig' with {
            listing: listing
          } %}
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-600">
        Vous n'avez encore ajouté aucune annonce à vos favoris.
      </p>
    {% endif %}
  </section>
{% endblock %}
