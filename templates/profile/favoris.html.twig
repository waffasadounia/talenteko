{% extends 'base.html.twig' %}

{% block title %}Mes favoris | TalentÉkô{% endblock %}

{% block body %}
<section class="max-w-6xl mx-auto px-4 py-10">
  <h1 class="text-3xl font-bold text-talenteko-blue mb-6">Mes favoris</h1>

  {% if favoris is not empty %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for annonce in favoris %}
        {% include 'partials/_annonce_card.html.twig' with { annonce: annonce } %}
      {% endfor %}
    </div>
  {% else %}
    <p class="text-gray-600">Vous n’avez encore ajouté aucune annonce à vos favoris.</p>
  {% endif %}
</section>
{% endblock %}
