{# ================================
  templates/profile/dashboard.html.twig
  Tableau de bord utilisateur
  ================================ #}
{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord | Talentéko{% endblock %}

{% block body %}
	<section class="max-w-6xl mx-auto px-4 py-10">
		<h1 class="text-3xl font-bold text-talenteko-blue mb-6">
			Mon tableau de bord
		</h1>

		<div class="bg-white border border-gray-200 rounded-xl p-6 mb-8 flex items-center gap-4">
			<div class="w-16 h-16 bg-talenteko-peach-200 text-talenteko-orange-500
										                rounded-full flex items-center justify-center font-bold text-xl">
				{{ (app.user.pseudo ?? 'M')|slice(0, 1)|upper }}
			</div>
			<div>
				<div class="font-semibold text-lg text-talenteko-blue">
					{{ app.user.pseudo }}#{{ app.user.tag }}
				</div>
				<div class="text-sm text-gray-500">
					{{ app.user.location ?? 'Ville non renseignée' }}
				</div>
			</div>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<a href="{{ path('app_listing_new') }}" class="bg-talenteko-orange-500 text-white rounded-xl p-6 shadow hover:shadow-md transition text-center">
				<h2 class="text-xl font-bold mb-2">
					<i class="fa-solid fa-bullhorn  "></i>
					Déposer une annonce
				</h2>
				<p>Partagez vos compétences ou trouvez de l'aide.</p>
			</a>

			<a href="{{ path('app_profile_favoris') }}" class="bg-white border border-gray-200 rounded-xl p-6 shadow hover:shadow-md transition text-center">
				<h2 class="text-xl font-bold mb-2">
					<i class="fa-solid fa-heart"></i>
					Mes favoris
				</h2>
				<p>Consultez les annonces que vous avez enregistrées.</p>
			</a>
		</div>
	</section>
{% endblock %}
