{# =============================
   Layout principal TalentÉkô
   - Sert de squelette global à toutes les pages
   - Contient : <head>, header, footer, blocks Twig
   ============================= #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />

    {# Balise <title> personnalisable par page #}
    <title>
      {% block title %}TalentÉkô{% endblock %}
    </title>

    {# Responsive mobile #}
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {# Exclusion du styleguide des moteurs de recherche #}
    {% if app.request.pathinfo starts with '/styleguide' %}
      <meta name="robots" content="noindex, nofollow" />
    {% endif %}

    {# =============================
       Favicons (multi-format)
       ============================= #}
    <link rel="icon" type="image/png" href="{{ asset('images/faviconTalenteko.png') }}" />
    <link rel="icon" type="image/svg+xml" href="{{ asset('images/faviconTalenteko.svg') }}" />
    <link rel="icon" type="image/x-icon" href="{{ asset('images/faviconTalenteko.ico') }}" />

    {# =============================
       CSS principal (compilé via Webpack Encore)
       ============================= #}
    {{ encore_entry_link_tags('app') }}

    {# Polices Google (Montserrat, Catamaran, Chivo) #}
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Catamaran:wght@400;500;600;700&family=Chivo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    {# Font Awesome (icônes) #}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    {# Espace réservé pour CSS additionnel par page #}
    {% block stylesheets %}{% endblock %}

    {# =============================
       JS principal (Webpack Encore)
       ============================= #}
    {{ encore_entry_script_tags('app') }}
  </head>

  <body class="font-montserrat bg-white text-gray-800">
    {# Header global (navigation) #}
    {% include 'partials/_header.html.twig' %}

    {# Messages flash globaux (succès, erreurs, etc.) #}
    <section class="container mx-auto mt-4 px-4">
      {% include 'partials/_flash.html.twig' %}
    </section>

    {# Zone principale de contenu #}
    <main class="container mx-auto mt-8 min-h-[80vh]">
      {% block body %}{% endblock %}
    </main>

    {# Footer global #}
    {% include 'partials/_footer.html.twig' %}

    {# Espace réservé pour JS additionnel par page #}
    {% block javascripts %}{% endblock %}
  </body>
</html>
