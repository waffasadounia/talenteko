{# ================================
  partials/_categories.html.twig
  Section "Catégories populaires"
  ================================ #}

<section class="py-16 bg-orange-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-10 text-center text-talenteko-blue">
      Catégories populaires
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 text-center">
      {% for category in categories %}
        {% include 'partials/_category_card.html.twig' with { category: category } %}
      {% else %}
        <p class="col-span-full text-center text-gray-500">
          Aucune catégorie disponible pour le moment.
        </p>
      {% endfor %}
    </div>
  </div>
</section>
