{# ================================
  partials/_categories.html.twig
  Section catégories populaires
  ================================ #}

<section id="categories" class="py-16 bg-orange-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-10 text-center text-talenteko-blue">
      Catégories populaires
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-6">
      {% for category in categories %}
        {% include 'partials/_category_card.html.twig' with { category: category } %}
      {% else %}
        <p class="text-center col-span-full text-gray-500 italic">
          Aucune catégorie disponible pour l’instant.
        </p>
      {% endfor %}
    </div>

    <div class="mt-8 text-center">
      <a href="{{ path('app_category_index') }}" class="btn-link" aria-label="Voir toutes les catégories">
        <i class="fa fa-list-ul"></i>
        <span>Toutes les catégories</span>
      </a>
    </div>
  </div>
</section>
