{#================================
  partials/_categories.html.twig
  Section catégories populaires
  ================================#}

<section id="categories" class="bg-orange-50 py-16">
  <div class="mx-auto max-w-6xl px-4">
    <h2 class="text-shadow-talenteko-blue-900 mb-10 text-center text-3xl font-bold">
      Catégories populaires
    </h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {% for category in categories %}
        {% include 'partials/_category_card.html.twig' with {
          category: category
        } %}
      {% else %}
        <p class="col-span-full text-center italic text-gray-500">
          Aucune catégorie disponible pour l'instant.
        </p>
      {% endfor %}
    </div>

    <div class="mt-8 text-center">
      <a
        href="{{ path('app_category_index') }}"
        class="btn-link"
        aria-label="Voir toutes les catégories"
      >
        <i class="fa fa-list-ul"></i>
        <span>Toutes les catégories</span>
      </a>
    </div>
  </div>
</section>
