{# =============================
   partials/_hero.html.twig
   Section HERO (bandeau d'introduction)
   ============================= #}
<section class="bg-talenteko-peach-100 py-20 text-center">
  <div class="mx-auto max-w-4xl px-4">
    {# --- Titre principal --- #}
    <h1 class="text-primary-color mb-6 text-5xl font-extrabold">
      Talent<span class="text-talenteko-orange-500">éko</span>
    </h1>

    {# --- Phrase d'accroche --- #}
    <p class="text-primary-color mb-8 text-lg">
      Valorisez vos talents, enrichissez-vous.<br />
      Partagez vos savoir-faire et découvrez de nouvelles compétences sans dépenser
      un euro.
    </p>

    {# --- Appels à l'action --- #}
    <div class="flex flex-wrap justify-center gap-4">
      {# CTA principal : dépôt d'annonce #}
      <a
        href="{{ path('app_listing_new') }}"
        class="btn-primary flex items-center gap-2"
        aria-label="Déposer une annonce sur Talentéko"
      >
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        <span>Déposer une annonce</span>
      </a>

      {# CTA secondaire : voir les tendances #}
      <a
        href="#tendances"
        class="btn-outline"
        aria-label="Découvrir les annonces en tendance"
      >
        <i class="fa fa-search" aria-hidden="true"></i>
        <span>Découvrir les talents</span>
      </a>
    </div>
  </div>
</section>
