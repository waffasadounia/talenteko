{# ====================================================================
   Partial : Alerte TalentÉkô (success / error / warning / info)
   Design unifié avec form-error-block
   Accessibilité : role="alert", aria-live="polite"
   ==================================================================== #}

{% set themes = {
    success: {
        icon: 'fa-circle-check',
        border: 'border-green-300',
        bg: 'bg-green-50 dark:bg-green-900',
        text: 'text-green-700 dark:text-green-200'
    },
    error: {
        icon: 'fa-circle-exclamation',
        border: 'border-red-300',
        bg: 'bg-red-50 dark:bg-red-900',
        text: 'text-red-700 dark:text-red-200'
    },
    warning: {
        icon: 'fa-triangle-exclamation',
        border: 'border-yellow-300',
        bg: 'bg-yellow-50 dark:bg-yellow-900',
        text: 'text-yellow-700 dark:text-yellow-200'
    },
    info: {
        icon: 'fa-circle-info',
        border: 'border-blue-300',
        bg: 'bg-blue-50 dark:bg-blue-900',
        text: 'text-blue-700 dark:text-blue-200'
    }
} %}

{% set key = type|default('info') %}
{% set theme = themes[key] ?? themes.info %}

<div
    class="form-error-block rounded-lg {{ theme.border }} {{ theme.bg }} {{ theme.text }} flex items-start gap-3"
    role="alert"
    aria-live="polite"
    data-controller="flash"
    data-flash-timeout-value="5000"
    {% if id is defined and id %} id="{{ id }}" {% endif %}
>
    <i class="fa-solid {{ theme.icon }} mt-0.5"></i>
    <div class="text-sm leading-snug">
        {{ message|raw }}
    </div>
</div>
