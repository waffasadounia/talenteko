{# ======================================
   Partiel : Alerte (success / error / info)
   ====================================== #}

{% set colors = {
  success: {
    border: 'border-green-200',
    bg: 'bg-green-50 dark:bg-green-900 dark:border-green-700',
    text: 'text-green-700 dark:text-green-200'
  },
  error: {
    border: 'border-red-300',
    bg: 'bg-red-50 dark:bg-red-900 dark:border-red-700',
    text: 'text-red-700 dark:text-red-200'
  },
  warning: {
    border: 'border-yellow-300',
    bg: 'bg-yellow-50 dark:bg-yellow-900 dark:border-yellow-700',
    text: 'text-yellow-700 dark:text-yellow-200'
  },
  info: {
    border: 'border-blue-200',
    bg: 'bg-blue-50 dark:bg-blue-900 dark:border-blue-700',
    text: 'text-blue-700 dark:text-blue-200'
  }
} %}

{% set key = type|default('info') %}
{% set current = colors[key] ?? colors.info %}

<div
  class="mb-4 rounded-lg border {{ current.border }} {{ current.bg }} p-3 text-sm {{ current.text }}
         transition-all duration-300 ease-out"
  role="alert"
  aria-live="polite"
  data-controller="flash"
  data-flash-timeout-value="5000"
  {% if id is defined and id %}id="{{ id }}"{% endif %}
>
  {{ message|raw }}
</div>
