{# ================================
  partials/_category_card.html.twig
  Carte de catégorie
  ================================ #}

<a
	href="{{ path('app_category_show', {slug: category.slug}) }}" class="block rounded-xl overflow-hidden shadow-sm hover:shadow-md transition group bg-white
		         focus:outline-none focus-visible:ring-2 focus-visible:ring-talenteko-orange-500">

	{# --- Image de la catégorie (slug.png), sinon placeholder --- #}
	{% set image_path = 'images/categories/' ~ category.slug ~ '.png' %}

	<div class="relative w-full h-60 flex items-center justify-center bg-white">
		<img src="{{ asset(image_path) }}" onerror="this.onerror=null;this.src='{{ asset('images/placeholders/placeholder.png') }}';" alt="Illustration de la catégorie {{ category.name }}" class="max-w-full max-h-full object-contain transition-transform duration-300 group-hover:scale-105"/>
	</div>

	{# --- Libellé catégorie --- #}
	<div class="p-3 text-center bg-white">
		<h3 class="text-lg font-semibold text-talenteko-blue-900">
			{{ category.name }}
		</h3>
	</div>
</a>
