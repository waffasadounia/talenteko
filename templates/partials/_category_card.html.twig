{# ================================
  partials/_category_card.html.twig
  Carte de catégorie
  ================================ #}

<a
  href="{{
  path(
    'app_category_show',
    {
      slug: category.slug
    }
  )
  }}"
  class="group focus-visible:ring-talenteko-orange-500 block overflow-hidden rounded-xl bg-white shadow-sm transition hover:shadow-md focus:outline-none focus-visible:ring-2"
>
  {# --- Image de la catégorie (slug.png), sinon placeholder --- #}
  {% set image_path = 'images/categories/' ~ category.slug ~ '.png' %}

  <div class="relative flex h-60 w-full items-center justify-center bg-white">
    <img
      src="{{ asset(image_path) }}"
      onerror="this.onerror=null;this.src='{{
      asset(
        'images/placeholders/placeholder.png'
      )
      }}';"
      alt="Illustration de la catégorie {{ category.name }}"
      class="max-h-full max-w-full object-contain transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  {# --- Libellé catégorie --- #}
  <div class="bg-white p-3 text-center">
    <h3 class="text-talenteko-blue-900 text-lg font-semibold">
      {{ category.name }}
    </h3>
  </div>
</a>
