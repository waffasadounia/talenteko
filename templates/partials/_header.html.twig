
<header class="bg-white">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    
   {# Logo + texte #}
<a href="{{ path('app_home') }}" class="flex flex-col items-center shrink-0 text-center">
  <img src="{{ asset('images/logo.png') }}" alt="Logo TalentÉkô" class="h-12 w-auto mb-1 rounded-full">
  <span class="text-[18px] font-extrabold leading-tight">
    <span class="text-[#141C2E]">Talent</span><span class="text-[#D6713C]">Ékô</span>
  </span>
</a>


{# Contenu central #}
<div class="flex items-center justify-center flex-1 gap-x-6">

  {# Barre de recherche #}
  <form action="{{ path('app_home') }}" method="get" class="relative w-full max-w-md">
    <input
      type="search"
      name="q"
      placeholder="Rechercher une compétence..."
      class="w-full pl-10 pr-4 py-2 rounded-full border border-[#E2865A] text-gray-700 bg-white placeholder-gray-400
             focus:ring-[#E2865A] focus:border-[#E2865A] focus:bg-white transition"
    >
    <svg class="absolute left-3 top-2.5 w-5 h-5 text-[#E2865A]" fill="none" stroke="currentColor" stroke-width="2"
         viewBox="0 0 24 24">
      <path d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1 0 5.5 5.5a7.5 7.5 0 0 0 11.15 11.15z" />
    </svg>
  </form>
  
 {# Recherche #}
<a href="{{ path('app_search') }}" aria-label="Rechercher une compétence" class="text-base font-semibold text-[#E2865A] flex items-center gap-2 hover:underline">
  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[#E2865A]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15z" />
  </svg>
  Recherche
</a>



  {# Favoris #}
  <a href="#" aria-label="Accéder à vos favoris" class="text-base font-semibold text-[#E2865A] flex items-center gap-2 hover:underline">
  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-current" viewBox="0 0 24 24">
    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 
      5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 
      3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 
      8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
  </svg>
  Favoris
</a>

  {# Messages - avec marge à gauche pour aérer #}
 <a href="#" aria-label="Voir vos messages"  class="text-base font-semibold text-[#E2865A] flex items-center gap-2 hover:underline">
  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-current" viewBox="0 0 24 24">
    <path d="M20 2H4a2 2 0 0 0-2 2v16l4-4h14a2 2 0 0 0 
      2-2V4a2 2 0 0 0-2-2z"/>
  </svg>
  Messages
</a>
</div>


    {# Boutons à droite #}
    <div class="flex items-center gap-3 ml-4 shrink-0">
      <a href="#" aria-label="Déposer une annonce" class="border border-[#E2865A] text-[#E2865A] px-4 py-2 rounded-full font-semibold hover:bg-orange-50 transition">
        + Déposer une annonce
      </a>
      <a href="{{ path('app_login') }}" aria-label="Se connecter à votre compte" class="bg-[#E2865A] text-white px-4 py-2 rounded-full font-semibold hover:bg-orange-600 transition">
        <i class="fa fa-user"></i> Se connecter
      </a>
    </div>
  </div>

  {# Catégories populaires #}
 {% set current_route = app.request.attributes.get('_route') %}
{% if current_route in ['app_home', 'app_search'] %}
  <div class="bg-white py-3 border-t border-[#E2865A]">
    <div class="max-w-7xl mx-auto px-4 flex justify-between text-sm">
      {% set categories = ['Bricolage', 'Bien-être', 'Jardinage', 'Éducation', 'Informatique', 'Langues', 'Art', 'Marketing', 'Administratif', 'Juridique'] %}
      {% for cat in categories %}
        <a href="#" class="bg-white border border-orange-100 text-gray-700 px-4 py-1.5 rounded-full shadow-sm hover:bg-orange-50">
          {{ cat }}
        </a>
      {% endfor %}
    </div>
  </div>
{% endif %}

</header>
