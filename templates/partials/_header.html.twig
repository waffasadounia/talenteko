<header class="bg-white">
  <div class="w-full max-w-7xl mx-auto px-6 py-3 flex items-center justify-between gap-6">

    <!-- Logo à gauche -->
    <a href="{{ path('app_home') }}" class="flex flex-col items-center shrink-1 text-center mr-6">
      <img src="{{ asset('images/logo.png') }}" alt="Logo TalentÉkô" class="h-5 w-auto mb-1 rounded-full" />
      <span class="text-sm font-extrabold leading-tight">
        <span class="text-[#141C2E]">Talent</span><span class="text-[#D6713C]">Ékô</span>
      </span>
    </a>

    <!-- Wrapper central: barre recherche + liens -->
<div class="flex items-center flex-1 max-w-5xl mx-4 gap-6 justify-center">
  <!-- Barre de recherche -->
  <form action="{{ path('app_home') }}" method="get" class="relative flex-shrink-0 w-full max-w-md">
    <input
      type="search"
      name="q"
      placeholder="Rechercher une compétence..."
      class="w-full pl-10 pr-4 py-2 rounded-full border border-[#E2865A] text-gray-700 bg-white placeholder-gray-400 focus:ring-[#E2865A] focus:border-[#E2865A] focus:bg-white transition"
    />
    <svg class="absolute left-3 top-2.5 w-5 h-5 text-[#E2865A]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1 0 5.5 5.5a7.5 7.5 0 0 0 11.15 11.15z" />
    </svg>
  </form>

  <!-- Zone centrale : liens avec espace entre eux -->
  <nav class="flex gap-10 whitespace-nowrap">
    <a href="{{ path('app_search') }}" class="text-[#E2865A] font-semibold hover:underline flex items-center gap-2">
      <i class="fa fa-search"></i> Recherche
    </a>
    <a href="#" class="text-[#E2865A] font-semibold hover:underline flex items-center gap-2">
      <i class="fa fa-heart"></i> Favoris
    </a>
    <a href="#" class="text-[#E2865A] font-semibold hover:underline flex items-center gap-2">
      <i class="fa fa-envelope"></i> Messages
    </a>
  </nav>
</div>


    <!-- Boutons à droite -->
    <div class="flex items-center gap-3 ml-6 shrink-0">
      <a href="#" aria-label="Déposer une annonce" class="border border-[#E2865A] text-[#E2865A] px-4 py-2 rounded-full font-semibold hover:bg-orange-50 transition">
        + Déposer une annonce
      </a>
      <a href="{{ path('app_login') }}" aria-label="Se connecter à votre compte" class="bg-[#E2865A] text-white px-4 py-2 rounded-full font-semibold hover:bg-orange-600 transition flex items-center gap-2">
        <i class="fa fa-user"></i> Se connecter
      </a>
    </div>
  </div>
  
 {# Catégories populaires #}
  {% set current_route = app.request.attributes.get('_route') %}
  {% if current_route in ['app_home', 'app_search'] %}
    <div class="bg-white py-3 border-t border-[#E2865A]">
      <div class="max-w-7xl mx-auto px-4 flex justify-between text-sm">
        {% set categories = ['Bricolage', 'Bien-être', 'Jardinage', 'Éducation', 'Informatique', 'Langues', 'Art', 'Marketing', 'Administratif', 'Juridique'] %}
        {% for cat in categories %}
          <a href="#" class="bg-white border border-orange-100 text-gray-700 px-4 py-1.5 rounded-full shadow-sm hover:bg-orange-50">
            {{ cat }}
          </a>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</header>

