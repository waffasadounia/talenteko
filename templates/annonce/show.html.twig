{# templates/annonce/show.html.twig #}
{#
  Page DÉTAIL (mise en forme légère).
  Variable attendue : "annonce" (title, description, category, user.name, ville, type, createdAt).
#}
{% extends 'base.html.twig' %}

{# <title> pour l’onglet navigateur #}
{% block title %}{{ annonce.title }} | TalentÉkô{% endblock %}

{# IMPORTANT : utiliser "body" (pas "content") pour coller à base.html.twig #}
{% block body %}
  {# ===== Bandeau d’en-tête : breadcrumb + titre ===== #}
  <section class="bg-[#FFF6F2] py-8">
    <div class="max-w-6xl mx-auto px-4">
      {# Breadcrumb minimal (retour à l’accueil) #}
      <p class="text-sm mb-3">
        <a href="{{ path('app_home') }}" class="text-[#E2865A] hover:underline">Accueil</a>
        <span class="text-gray-400">/</span>
        <span class="text-gray-600">Annonce</span>
      </p>

      {# Titre principal #}
      <h1 class="text-3xl md:text-4xl font-extrabold text-primary-color">
        {{ annonce.title }}
      </h1>

      {# Meta infos (catégorie + ville) sécurisées #}
      <div class="mt-2 text-sm text-gray-600 flex flex-wrap gap-x-4 gap-y-1">
        {% if annonce.category is defined and annonce.category %}
          <span>Catégorie : <strong>{{ annonce.category }}</strong></span>
        {% endif %}
        {% if annonce.ville is defined and annonce.ville %}
          <span>Ville : <strong>{{ annonce.ville }}</strong></span>
        {% endif %}
      </div>
    </div>
  </section>

  {# ===== Contenu principal ===== #}
  <section class="py-10 bg-white">
    <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">

      {# Colonne gauche : image + description #}
      <div class="md:col-span-2 space-y-6">

        {# Image placeholder #}
        <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
          <img
            src="{{ asset('images/placeholder.png') }}"
            alt="Image de l’annonce"
            class="w-full h-72 object-cover"
            onerror="this.onerror=null;this.src='{{ asset('images/placeholder.png') }}';"
          >
        </div>

        {# Bloc Description (sans plugin Typography pour éviter dépendances) #}
        <article class="bg-white border border-gray-200 rounded-xl p-6">
          <h2 class="text-xl font-bold mb-3 text-primary-color">Description</h2>
          <div class="max-w-none text-gray-800 leading-relaxed whitespace-pre-line">
            {{ annonce.description }}
          </div>
        </article>
      </div>

      {# Colonne droite : informations auteur #}
      <aside class="space-y-6">
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-primary-color mb-4">Proposé par</h3>
          <div class="flex items-center gap-3">
            {# Avatar simple basé sur l'initiale du nom #}
            <div class="w-10 h-10 bg-[#F7F4E7] text-[#D6713C] rounded-full flex items-center justify-center font-bold">
              {{ (annonce.user.name ?? 'M')|slice(0,1)|upper }}
            </div>
            <div>
              <div class="font-semibold text-[#141C2E]">{{ annonce.user.name ?? 'Membre' }}</div>
              {% if annonce.ville is defined and annonce.ville %}
                <div class="text-sm text-gray-500">{{ annonce.ville }}</div>
              {% endif %}
            </div>
          </div>
        </div>

        {# Lien retour (UX) #}
        <div class="bg-white border border-gray-200 rounded-xl p-6">
          <a href="{{ path('app_home') }}" class="block text-center text-[#E2865A] hover:underline">
            ← Retour à l’accueil
          </a>
        </div>
      </aside>
    </div>
  </section>

  {# Messages flash (si besoin) #}
  {% include 'partials/_flash.html.twig' %}
{% endblock %}
