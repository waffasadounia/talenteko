{% extends 'base.html.twig' %}

{% block body %}
	<div class="max-w-xl mx-auto mt-16 bg-white shadow-lg rounded-xl p-8 space-y-6">

		<h1 class="text-2xl font-bold text-talenteko-orange-500">
			Supprimer cette annonce ?
		</h1>
		<p class="text-gray-600">
			Cette action est
			<strong>définitive</strong>
			et supprimera :
			<ul class="list-disc pl-6 mt-2">
				<li>L'annonce "{{ listing.title }}"</li>
				<li>Toutes ses images</li>
				<li>Tous ses favoris associés</li>
			</ul>
		</p>
		<div
			class="flex items-center gap-4 mt-8">

			{# Annuler = retour à l'annonce #}
			<a href="{{ path('app_listing_show', { slug: listing.slug }) }}" class="btn-outline-sm flex-1 text-center">
				Annuler
			</a>
			{# Supprimer = vraie suppression #}
			<form method="post" action="{{ path('app_listing_delete', { id: listing.id }) }}" class="flex-1">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ listing.id) }}">
				<button type="submit" class="btn-primary-sm w-full flex items-center justify-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"/>
					</svg>
					Supprimer
				</button>
			</form>
		</div>
	</div>
{% endblock %}
