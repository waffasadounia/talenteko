{# ================================
   templates/security/forgot_password.html.twig
   MVP "Mot de passe oublié"
   ================================ #}
{% extends 'base.html.twig' %}

{% block title %}
  Mot de passe oublié | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-talenteko-peach-100 py-16">
    <div class="mx-auto max-w-md px-6">
      <h1 class="text-talenteko-orange-500 mb-6 text-center text-3xl font-bold">
        Mot de passe oublié
      </h1>

      <div class="rounded-2xl bg-white p-6 shadow-sm">
        <form
          method="post"
          action="{{ path('app_forgot_password') }}"
          class="space-y-5"
        >
          <div class="space-y-1">
            <label for="email" class="form-label">
              Adresse email <span class="form-required" aria-hidden="true">*</span>
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              autocomplete="email"
              placeholder="ex. vous@exemple.fr"
              class="form-input"
            />
          </div>

          <button type="submit" class="btn-primary btn-block">
            Envoyer un lien de réinitialisation
          </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
          <a href="{{ path('app_login') }}" class="btn-link">
            Retour à la connexion
          </a>
        </p>
      </div>
    </div>
  </section>
{% endblock %}
