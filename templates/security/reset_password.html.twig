{# ================================
   templates/security/reset_password.html.twig
   Formulaire de choix du nouveau mot de passe
   ================================ #}
{% extends 'base.html.twig' %}

{% block title %}
  Nouveau mot de passe | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-talenteko-peach-100 py-16">
    <div class="mx-auto max-w-md px-6">
      <h1 class="text-talenteko-orange-500 mb-6 text-center text-3xl font-bold">
        Définir un nouveau mot de passe
      </h1>

      {# --- Messages flash (succès / erreurs) --- #}
      {% include 'partials/_flash.html.twig' %}

      <div class="rounded-2xl bg-white p-6 shadow-sm">
        {{ form_start(resetForm, {
          attr: {
            novalidate: 'novalidate',
            class: 'tk-form space-y-5'
          }
        }) }}

        {# Champ mot de passe #}
        {% include 'partials/_password_field.html.twig' with {
          field: resetForm.plainPassword.first,
          label: 'Nouveau mot de passe',
          target: 'original'
        } %}

        {# Champ confirmation #}
        {% include 'partials/_password_field.html.twig' with {
          field: resetForm.plainPassword.second,
          label: 'Confirmer le mot de passe',
          target: 'confirm'
        } %}

        <button type="submit" class="btn-primary btn-block mt-6">
          Mettre à jour le mot de passe
        </button>

        {{ form_end(resetForm) }}
      </div>
    </div>
  </section>
{% endblock %}
