{# ================================
   templates/security/reset_password.html.twig
   Formulaire de choix du nouveau mot de passe
   ================================ #}
{% extends 'base.html.twig' %}

{% block title %}
  Nouveau mot de passe | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-talenteko-peach-100 py-16">
    <div class="mx-auto max-w-md px-6">
      <h1 class="mb-6 text-center text-3xl font-bold text-talenteko-orange-500">
        Définir un nouveau mot de passe
      </h1>

      {# --- Messages flash (succès / erreurs) --- #}
      {% include 'partials/_flash.html.twig' %}

      <div class="rounded-2xl bg-white p-6 shadow-sm">
        {{
          form_start(
            resetForm,
            {
              attr: {
                novalidate: 'novalidate',
                class: 'tk-form space-y-5'
              }
            }
          )
        }}

        {# Champ mot de passe #}
       {% include 'partials/_password_fields.html.twig' with {
    field_first: resetForm.plainPassword.first,
    field_second: resetForm.plainPassword.second,
    label_first: 'Nouveau mot de passe',
    label_second: 'Confirmer le mot de passe'
} %}
        <button type="submit" class="btn-primary btn-block mt-6">
          Mettre à jour le mot de passe
        </button>

        {{ form_end(resetForm) }}
      </div>
    </div>
  </section>
{% endblock %}
