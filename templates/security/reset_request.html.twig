{# ================================
   templates/security/reset_request.html.twig
   Page "Mot de passe oublié"
   ================================ #}
{% extends 'base.html.twig' %}

{% block title %}
  Mot de passe oublié | TalentÉkô
{% endblock %}

{% block body %}
  <section class="bg-talenteko-peach-100 py-16">
    <div class="mx-auto max-w-md px-6">
      <h1 class="text-talenteko-orange-500 mb-6 text-center text-3xl font-bold">
        Réinitialiser mon mot de passe
      </h1>

      <p class="mb-6 text-center text-gray-700">
        Entrez l’adresse email associée à votre compte.<br />
        Vous recevrez un lien pour créer un nouveau mot de passe.
      </p>

      {# Messages flash (succès / erreurs) #}
      {% include 'partials/_flash.html.twig' %}

      <div class="rounded-2xl border bg-white p-6 shadow-sm">
        <form
          method="post"
          action="{{ path('app_forgot_password') }}"
          class="space-y-5"
          novalidate
        >
          {# Champ email avec accessibilité #}
          {% set email_errors_id = 'forgot-email-errors' %}
          <div class="space-y-1">
            <label for="email" class="form-label">
              Adresse email <span class="form-required" aria-hidden="true">*</span>
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              autocomplete="email"
              placeholder="ex. vous@exemple.fr"
              class="form-input"
              aria-describedby="{{ email_errors_id }}"
            />

            {# Affichage d'une éventuelle erreur (optionnel si tu passes des erreurs depuis le contrôleur) #}
            {% if error is defined and error %}
              <p id="{{ email_errors_id }}" class="form-error" role="alert">
                {{ error }}
              </p>
            {% endif %}
          </div>

          <button type="submit" class="btn-primary btn-block">
            Envoyer le lien
          </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
          <a href="{{ path('app_login') }}" class="btn-link">
            Retour à la connexion
          </a>
        </p>
      </div>
    </div>
  </s
