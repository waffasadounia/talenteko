{# ========================== #
# templates/security/login.html.twig
# ========================== #}
{% extends 'base.html.twig' %}
{% block title %}Se connecter | TalentÉkô{% endblock %}

{% block body %}
<section class="bg-talenteko-peach-100 py-16">
  <div class="max-w-md mx-auto px-6">
    <h1 class="text-3xl font-bold text-primary-color mb-6 text-center">Se connecter</h1>

    {% if error %}
      <div class="mb-4 rounded-lg border border-red-300 bg-red-50 text-red-700 p-3" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    {% if app.user %}
      <div class="mb-4 text-sm rounded-lg border border-green-200 bg-green-50 text-green-700 p-3">
        Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.
        <a href="{{ path('app_logout') }}" class="btn-link">Se déconnecter</a>
      </div>
    {% endif %}

    <div class="rounded-2xl border bg-white p-6 shadow-sm">
      <form method="post" action="{{ path('app_login') }}" class="space-y-5" novalidate>
        {# EMAIL #}
        <div>
          <label for="email" class="form-label">
            Adresse email <span class="form-required" aria-hidden="true">*</span>
          </label>
          <input id="email" name="email" type="email" required autocomplete="email"
                 value="{{ last_username|default('') }}"
                 placeholder="ex. vous@exemple.fr"
                 class="form-input" />
        </div>

        {# MOT DE PASSE #}
        <div>
          <label for="password" class="form-label">
            Mot de passe <span class="form-required" aria-hidden="true">*</span>
          </label>
          <input id="password" name="password" type="password" required autocomplete="current-password"
                 placeholder="••••••••"
                 class="form-input" />
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <div class="flex items-center justify-between text-sm">
          <label class="inline-flex items-center gap-2 text-gray-600">
            <input type="checkbox" name="_remember_me"
                   class="rounded border-gray-300 text-talenteko-orange-500 focus:ring-talenteko-orange-500">
            Se souvenir de moi
          </label>
          <a href="#" class="btn-link">Mot de passe oublié ?</a>
        </div>

        <button type="submit" class="btn-primary btn-block">Se connecter</button>
      </form>

      <p class="text-sm text-gray-600 mt-6 text-center">
        Pas encore de compte ?
        <a href="{{ path('app_register') }}" class="btn-link">Créer un compte</a>
      </p>
    </div>
  </div>
</section>
{% endblock %}
