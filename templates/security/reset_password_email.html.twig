{# ============================================================
   templates/security/reset_password.html.twig
   Email : Réinitialisation du mot de passe — TalentÉkô
   ============================================================ #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Réinitialisation de votre mot de passe | TalentÉkô
    </title>
    <style>
      /* ----------- Styles de base ----------- */
      body { font-family: Montserrat, Arial,
      sans-serif; background-color: #fdf5f1; color: #141c2e; margin: 0; padding: 24px; line-height:
      1.6; }

      .container { max-width: 600px; margin: 0 auto; background: #ffffff; border-radius: 12px;
      padding: 24px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05); }

      h1 { font-size: 20px; font-weight: 700; color: #d6713c; text-align: center; margin-bottom:
      20px; }

      p { font-size: 14px; margin: 10px 0; }

      .btn { display: inline-block; background-color: #d6713c; color: #ffffff !important;
      text-decoration: none; font-weight: 600; padding: 12px 20px; border-radius: 8px; text-align:
      center; margin: 24px 0; }

      .btn:hover { opacity: 0.9; }

      .footer { font-size: 12px; color: #777777; text-align: center; margin-top: 24px; }
    </style>
  </head>

  <body>
    <div class="container" role="article" aria-roledescription="e-mail">
      <h1>Réinitialisation de votre mot de passe</h1>

      <p>
        Bonjour,
      </p>

      <p>
        Vous avez demandé à réinitialiser le mot de passe de votre compte
        <strong>TalentÉkô</strong>.
      </p>

      <p>
        Cliquez sur le bouton ci-dessous pour définir un nouveau mot de passe&nbsp;:
      </p>

      <p style="text-align: center;">
        <a
          href="{{ resetUrl|default('#') }}"
          class="btn"
          aria-label="Réinitialiser mon mot de passe sur TalentÉkô"
        >
          Réinitialiser mon mot de passe
        </a>
      </p>

      <p>
        Ce lien expirera dans
        <strong>{{ tokenLifetime|default('1&nbsp;heure') }}</strong>.<br />
        Si vous n’avez pas fait cette demande, ignorez simplement cet e-mail.
      </p>

      <hr style="border: none; border-top: 1px solid #eee; margin: 24px 0;" />

      <div class="footer">
        © {{ 'now'|date('Y') }} TalentÉkô<br />
        Plateforme d’échange de compétences entre particuliers.
      </div>
    </div>
  </body>
</html>
