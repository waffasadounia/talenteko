{# ============================================================
   templates/exchange/new_exchange.html.twig
   Notification : Nouvelle proposition d’échange — TalentÉkô
   ============================================================ #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Nouvelle proposition d’échange | TalentÉkô
    </title>
    <style>
      /* ----------- Styles de base ----------- */ body { font-family: Montserrat, Arial,
      sans-serif; background-color: #fdf5f1; color: #141c2e; margin: 0; padding: 24px; line-height:
      1.6; }

      .container { max-width: 600px; margin: 0 auto; background: #ffffff; border-radius: 12px;
      padding: 24px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05); }

      h1 { font-size: 20px; font-weight: 700; color: #d6713c; text-align: center; margin-bottom:
      20px; }

      p { font-size: 14px; margin: 10px 0; }

      .listing-title { font-style: italic; color: #434958; }

      .btn { display: inline-block; background-color: #d6713c; color: #ffffff !important;
      text-decoration: none; font-weight: 600; padding: 12px 20px; border-radius: 8px; text-align:
      center; margin: 24px 0; }

      .footer { font-size: 12px; color: #777777; text-align: center; margin-top: 24px; }
    </style>
  </head>

  <body>
    <div class="container" role="article" aria-roledescription="e-mail">
      <h1>Nouvelle proposition d’échange</h1>

      <p>
        <strong>{{ sender|default('Un utilisateur TalentÉkô') }}</strong>
        est intéressé par votre annonce&nbsp;:
      </p>

      <p class="listing-title">
        {{ listingTitle|default('Annonce inconnue') }}
      </p>

      <p style="text-align: center;">
        <a
          href="{{
          url(
            'app_listing_show',
            {
              slug: listingSlug|default('')
            }
          )
          }}"
          class="btn"
          aria-label="Voir l’annonce concernée sur TalentÉkô"
        >
          Voir l’annonce
        </a>
      </p>

      <p style="font-size: 13px; color: #555;">
        Connectez-vous à votre compte TalentÉkô pour accepter ou refuser la proposition d’échange.
      </p>

      <hr style="border: none; border-top: 1px solid #eee; margin: 24px 0;" />

      <div class="footer">
        © {{ 'now'|date('Y') }} TalentÉkô<br />
        Plateforme d’échange de compétences entre particuliers.
      </div>
    </div>
  </body>
</html>
